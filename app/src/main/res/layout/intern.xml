<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ABB6FF"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ABB6FF"
        android:padding="10dp">

        <ImageView
            android:id="@+id/IVGambarUser"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TVNamaUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nama_intern"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:background="#D6B9FF"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/TVTelponUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telpon_intern"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:background="#E9CEFD"
                android:paddingStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>